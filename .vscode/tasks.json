{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "open terminals",
			"dependsOn": [
				"open backend",
				"open frontend"
			],
			// Try start the task on folder open
			"runOptions": {
				"runOn": "folderOpen"
			},
		},
		{
			"label": "open frontend",
			"type": "shell",
			"command": "bash",
			"args": [
				"-c",
				"cd frontend/my-react-app && exec bash"
			],
			"problemMatcher": [],
		},
		{
			"label": "open backend",
			"type": "shell",
			"command": "bash",
			"args": [
				"-c",
				"cd backend/server && exec bash"
			],
			"isBackground": true,
			"problemMatcher": [],
		},
		]
}